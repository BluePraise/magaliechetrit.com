<section class="portfolio-area" id="projects">
    <header class="section-header">
        <h2 class="heading__medium">Selected Projects</h2>
    </header>

        <ul class="portfolio-items unlist">
            {%- for project in collections.project | sort(attribute='data.dateModified') -%}
                <li class="portfolio-item">
                    <figure>
                        <img src="{{ project.data.imageFront }}" alt="{{ project.data.title }}">
                    </figure>
                    <h3>{{ project.data.title }}</h3>

                    {%- if project.data.jobTitle -%}
                        <p class="meta">{{ project.data.jobTitle }}</p>
                    {%- endif -%}

                    <span class="meta">{{ project.data.year }}</span>
                    <a href="{{ project.url }}" class="meta">Find out more <i class="las la-long-arrow-alt-right"></i></a>
                </li>
            {%-  endfor -%}

        </ul>
        {% include "./_resume-buttons.njk" %}
</section>