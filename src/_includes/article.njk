---
layout: 'base.njk'
---
<article class="container-xs">
<a class="back-link text__small" href="/" aria-label="Back to home"><i class="las la-long-arrow-alt-left"></i><span>Back to home</span></a>
    <header class="article-header">
        {% if image %}
            <figure>
                <img src="/assets/img/{{ image }}" alt="{{ title }}" />
            </figure>
        {% endif %}
        <h1 class="main-heading">{{ title }}</h1>
        <p class="meta date-posted"><span class="text__small">Date posted: </span><time datetime="{{ dateCreated }}">{{ dateCreated | makeDateReadable }}</time></p>
        <p class="meta date-modified"><span class="text__small">Date modified: </span><time datetime="{{ page.date }}">{{ page.date | makeDateReadable }}</time></p>

    </header>
    <div class="post-content">

    <div class="content">
        {{ content | safe }}
    </div>
    </div>
</article>