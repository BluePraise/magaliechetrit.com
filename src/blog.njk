permalink: blog/{{ blogpost.slug }}/
---
<div class="container__medium">
    <h2 class="page-title">Recent blog posts</h2>
    <ul class="unlist">
        {%- for post in collections.post | sortByDateCreated -%}
            <li>
                {% if image %}
                    <figure>
                        <img src="/assets/img/{{ image }}" />
                    </figure>
                {% endif %}
                <h3><a href="{{ post.url }}">{{ post.data.title }}</a></h3>
                <p class="excerpt">{{ post.data.description | safe }}</p>
                <p class="meta date-posted"><datetime>{{ post.date | makeDateReadable }}</datetime></p>
            </li>
        {%- endfor -%}
    </ul>
</div>
